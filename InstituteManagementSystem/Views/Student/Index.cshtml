@model IEnumerable<InstituteManagementSystem.Models.Student>  

@{
    ViewBag.Title = "Student";
}

<h2>Student</h2>
@Html.ActionLink("New Student","New","Student",null,new {@class="btn btn-primary"})
<br /><br />
    @if(!Model.Any()){
        <p>No Student Is In Db</p>

    }
    else
    {
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date Of Birth</th>
                <th>Action</th>
            </tr>
            <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.LastName</td>
                    <td>@student.Gender</td>
                    <td>@student.DateOfBirth.ToLongDateString()</td>
                    <td>
                        <button class="btn-link">Update</button> |
                        <button class="btn-link">Delete</button>
                    </td>
                </tr>
            }
            </tbody>
       
        </table>   
    }

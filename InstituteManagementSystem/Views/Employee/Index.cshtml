@model IEnumerable<InstituteManagementSystem.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Employee</h2>
@Html.ActionLink("New Employee","New","Employee",null,new {@class="btn btn-primary"})
<br /><br />
@if(!Model.Any()){
    <p>No Employee Is In Db</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Action</th>
        </tr>
        <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.LastName</td>
                <td>
                    <button class="btn-link">Update</button> |
                    <button class="btn-link">Delete</button>
                </td>
            </tr>
        }
        </tbody>
       
    </table>   
}

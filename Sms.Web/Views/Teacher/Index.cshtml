@model IEnumerable<Sms.Domain.Dto.TeacherDto>

@{
    Layout = "_Layout";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

@Html.ActionLink("New", "New", "Teacher", null, new { @class = "btn btn-primary" })


<table  class="table table-hover table-bordered ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Date Of Birth</th>
            <th>Subjects</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stu in Model)
        {
            <tr>
                <td>@Html.ActionLink(stu.Name, "Update", "Student", new { id = stu.Id })</td>
                <td>@stu.LastName</td>
                <td>@stu.Email</td>
                <td>@stu.Address</td>
                <td>@stu.PhoneNumber</td>
                <td>@stu.Age</td>
                <td>@stu.DateOfBirth</td>
                @*<td>@stu.Subjects.SubjectName</td>*@
                <td>Actions</td>
                <td>
                    @Html.ActionLink("Update", "Update", "Teacher", new { id = stu.Id, stu.Name }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", "Teacher", new { id = stu.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

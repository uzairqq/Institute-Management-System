@model IEnumerable<Sms.Domain.Dto.StudentDto>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">@ViewBag.Name</strong>
                            </div>
                            <div class="pull-left" style="margin-top: 20px; margin-left: 20px;">
                                <a class="btn btn-success" asp-action="StudentForm" asp-controller="Student"><i class="fa fa-plus"></i> New Student</a>
                            </div>
                            <div class="card-body">
                                <table id="studentTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Picture</th>
                                            <th>Name</th>
                                            <th>Lastname</th>
                                            <th>Gender</th>
                                            <th>Contact</th>
                                            <th>Email</th>
                                            <th>Age</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var res in Model)
                                        {
                                            <tr>
                                                <td>@res.Picture</td>
                                                <td>@res.Name</td>
                                                <td>@res.Lastname</td>
                                                <td>@res.Gender</td>
                                                <td>@res.Contact</td>
                                                <td>@res.Email</td>
                                                <td>@res.Age</td>
                                                <td>
                                                    <a asp-controller="Student" asp-action="StudentForm" asp-route-Id="@res.Id"><i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size:30px"></i></a> &nbsp; &nbsp;
                                                    <a asp-controller="Student" asp-action="Delete" asp-route-id="id"><i class="fa fa-remove-square-o" aria-hidden="true" style="font-size:30px"></i></a>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#studentTable').DataTable();
        });
    </script>
}
